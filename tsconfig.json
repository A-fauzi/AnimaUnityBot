{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "public",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": ["node"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}